<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.bbukowski.notifcount"
    android:versionCode="9"
    android:versionName="1.4.1" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="xposedmodule"
            android:value="true" />
        <meta-data
            android:name="xposeddescription"
            android:value="Shows a notification count badge on StatusBar icons providing a quantity." />
        <meta-data
            android:name="xposedminversion"
            android:value="54" />

        <activity
            android:name=".SettingsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="de.robv.android.xposed.category.MODULE_SETTINGS" />
            </intent-filter>
        </activity>
        <activity android:name="de.bbukowski.notifcount.AppListActivity" >
            <intent-filter>
                <action android:name="de.bbukowski.notifcount.WHITELIST" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>